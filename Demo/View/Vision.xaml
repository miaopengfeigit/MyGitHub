                    <TextBlock Text=","  Margin="0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding SelectPath.Translate.Y,StringFormat='##0.00'}" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                    <TextBlock Text="{Binding SelectPath.MyGeometry.Rect.Width,StringFormat='##0.00'}"  Margin="20,5,5,5" HorizontalAlignment="Left" VerticalAlignment="Center"/>
