                        </Canvas.Background>
                    </Canvas>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <myc:RectangleControl >

                    </myc:RectangleControl>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
